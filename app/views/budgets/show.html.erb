<div class="budget-show">
	<h1>
		<%= @budget.name %>	<%= link_to "<i class='material-icons'>edit</i>".html_safe, edit_budget_path(@budget) %>
	</h1>
	<h2>
		<span>
			<%= @budget.money %>/
		</span>
		<span>
			<%= @budget.current_money %>
		</span>
	</h2>

	<%= link_to "כל ההוצאות בקופה", @budget if params[:u] %>
	<table>
		<thead>
			<tr>
				<th>משתמש</th>
				<th>כסף</th>
				<th>פירוט</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @transactions.each do |transaction| %>
			<tr>
				<td><%= link_to transaction.user.name, budget_path(@budget, u: transaction.user) %></td>
				<td><%= transaction.money %></td>
				<td><%= transaction.description %></td>
				<td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
				<td><%= link_to 'Destroy', transaction, method: :delete, data: {confirm: 'Are you sure?'} %></td>
			</tr>
			<% end %>
		</tbody>
	</table>


</div>
