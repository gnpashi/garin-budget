<p id='notice'></p>
   <%= notice %>
<h1>
  <%= @garin.name %>
</h1>
<%= link_to 'עריכה', edit_garin_path(@garin) %>
<br>
<%= link_to 'רשומה חדשה', new_transaction_path(garin: @garin) %>

<p>
  <strong>
    כסף:
  </strong>
  <%= @garin.money %>
</p>

<strong>
  קופות
</strong>
<%= link_to 'תקציב חדש', new_budget_path %>
<table>
  <thead>
    <tr>
      <th>שם</th>
      <th>כסף</th>
      <th colspan='3'></th>
    </tr>
  </thead>
  <tbody>
    <% @garin.budgets.each do |budget| %>
    <tr>
      <td><%= link_to budget.name, budget %></td>
      <td><%= budget.money %></td>
      <td><%= link_to '<i class="material-icons">edit</i>'.html_safe , edit_budget_path(budget) %></td>
      <td><%= link_to '<i class="material-icons">delete</i>'.html_safe, budget, method: :delete, data: { confirm: 'בטוח\ה?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<a href="whatsapp://send?text=<%= root_url %>users/sign_up?g=<%= @garin.id %>">קישור הצטרפות לגרעין</a>
