
	<%= simple_form_for @transaction do |f| %>
	<%= f.association :user, collection: @garin.users, selected: current_user.id, label: "מי הוציא את הכסף?" %>
	<%= f.input :description, label: "על מה הוצאת כסף הפעם?" %>
	<%= f.input :money, label: "כמה כסף הוצאת?" %>
	<%= f.input :date, as: :date, html5: true, input_html: {value: Date.today}, label: "מתי?" %>
	<%= f.association :budget, collection: @garin.current_period.budgets, label: "מתוך איזו קופה?" %>
	<%# hidden_field_tag(:garin, current_user.garin_id) %>
	<%= f.button :submit, "שליחה" %>
	<% end %>
