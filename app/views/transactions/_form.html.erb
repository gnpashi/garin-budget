<%= simple_form_for @transaction do |f| %>
	<%= f.association :user, collection: @garin.users, selected: current_user %>
	<%= f.input :description %>
	<%= f.input :money %>
	<%= f.input :date, as: :date, html5: true, input_html: {value: Date.today} %>
	<%= f.association :budget, collection: @garin.budgets %>
	<%= hidden_field_tag(:garin, params[:garin]) %>
	<%= f.button :submit %>
<% end %>
