<p id="notice"><%= notice %></p>

<%= link_to 'New Transaction', new_transaction_path %>
<br>


<table class="data-tablea" id="transactions-datatable" data-source="<%= transactions_path(format: :json) %>">
  <thead>
    <tr>
			<th>Person</th>
      <th>Money</th>
      <th>Description</th>
      <th>Date</th>
      <th>Budget</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
		<% @transactions.each do |transaction| %>
			<tr>
				<td><%= transaction.person %></td>
				<td><%= transaction.money %></td>
				<td><%= transaction.description %></td>
				<td><%= transaction.date %></td>
				<td><%= transaction.budget.name %></td>
				<td><%= link_to 'Show', transaction %></td>
				<td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
				<td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<% end %>
  </tbody>
</table>
