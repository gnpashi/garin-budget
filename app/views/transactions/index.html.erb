<p id="notice"><%= notice %></p>

<%= link_to 'הוצאה חדשה', new_transaction_path(garin: @garin) %>
<br>

<%= link_to "כל ההוצאות", transactions_path if params[:u] %>
  <% if false %>
  <table class="data-tablea" id="transactions-datatable" data-source="<%= transactions_path(format: :json) %>">
    <thead>
      <tr>
  			<th>Person</th>
        <th>Money</th>
        <th>Description</th>
        <th>Date</th>
        <th>Budget</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
  		<% @transactions.each do |transaction| %>
  			<tr>
  				<td>
            <%= link_to transaction.user.name, transactions_path(u: transaction.user) %>
        </td>
  				<td><%= transaction.money %></td>
  				<td><%= transaction.description %></td>
  				<td><%= transaction.date %></td>
  				<td><%= transaction.budget.name %></td>
  				<td><%= link_to 'Show', transaction %></td>
  				<td><%= link_to 'Edit', edit_transaction_path(transaction) %></td>
  				<td><%= link_to 'Destroy', transaction, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  			</tr>
  		<% end %>
    </tbody>
  </table>
<% end %>
<%# puts TransactionDatatable.name %>

<!--Container-->
<div class="container w-full md:w-4/5 xl:w-3/5  mx-auto px-2 mt-20 text-gray-900">
<!--Card-->
  <div id='recipients' class="p-8 mt-6 lg:mt-0 rounded shadow bg-white">
  	<table id="table" class="stripe hover">
  		<thead>
  			<tr>
  				<th data-priority="1">שם הצוות</th>
          <% if current_user.admin? %>
    				<th data-priority="3"></th>
          <% end %>
  			</tr>
  		</thead>
  		<tbody>
        <% @teams.each do |team| %>
          <tr>
              <td><%= link_to team.name, team %></td>
              <% if current_user.admin? %>
                <td><%= link_to 'עריכה', edit_team_path(team) %> |
                <%= link_to 'מחיקה', team, method: :delete, data: { confirm: 'בטוח\ה?' } %></td>
              <% end %>
          </tr>
        <% end %>
  		</tbody>
  	</table>
  </div>
  <!--/Card-->
</div>
<!--/container-->


