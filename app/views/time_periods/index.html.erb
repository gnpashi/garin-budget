<p id="notice"><%= notice %></p>

<h1>Time Periods</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Length</th>
      <th>Garin</th>
      <th>Current money</th>
      <th>Money</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @time_periods.each do |time_period| %>
      <tr>
        <td><%= time_period.date %></td>
        <td><%= time_period.length %></td>
        <td><%= time_period.garin_id %></td>
        <td><%= time_period.current_money %></td>
        <td><%= time_period.money %></td>
        <td><%= link_to 'Show', time_period %></td>
        <td><%= link_to 'Edit', edit_time_period_path(time_period) %></td>
        <td><%= link_to 'Destroy', time_period, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

